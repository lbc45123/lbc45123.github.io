<div class="background">
  {% assign resume = site.data.resume %}
  
  <!-- Education -->
  {% if resume.education %}
  <div class="mt-3 fade-in-up" style="animation-delay: 0.2s;">
    <h3 class="font-weight-medium">Education</h3>
    <ul class="list-unstyled">
      {% for entry in resume.education %}
        {% if entry.selected %}
          <li class="mb-2">
            <div class="d-flex justify-content-between align-items-baseline">
              <div>
                <span class="font-weight-bold">{{ entry.studyType }}</span>
                {% if entry.area %} in {{ entry.area }}{% endif %}
                <span class="text-muted">@ 
                  {% if entry.url %}
                    <a href="{{ entry.url }}" target="_blank">{{ entry.institution }}</a>
                  {% else %}
                    {{ entry.institution }}
                  {% endif %}
                </span>
              </div>
              <div class="text-muted small text-nowrap ml-3">
                {% assign startDate = entry.startDate | split: '-' | slice: 0, 2 | join: '.' %}
                {% if entry.endDate %}
                  {% assign endDate = entry.endDate | split: '-' | slice: 0, 2 | join: '.' %}
                {% else %}
                  {% assign endDate = 'Present' %}
                {% endif %}
                {{ startDate }} - {{ endDate }}
              </div>
            </div>
            {% if entry.description %}
              <div class="small text-muted font-italic ml-3 mt-1">
                {{ entry.description | newline_to_br }}
              </div>
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  <!-- Work -->
  {% if resume.work %}
  <div class="mt-3 fade-in-up" style="animation-delay: 0.3s;">
    <h3 class="font-weight-medium">Work</h3>
    <ul class="list-unstyled">
      {% for entry in resume.work %}
        {% if entry.selected %}
          <li class="mb-2 d-flex justify-content-between align-items-baseline">
            <div>
              <span class="font-weight-bold">{{ entry.position }}</span>
              <span class="text-muted">@ 
                {% if entry.url %}
                  <a href="{{ entry.url }}" target="_blank">{{ entry.name }}</a>
                {% else %}
                  {{ entry.name }}
                {% endif %}
              </span>
            </div>
            <div class="text-muted small text-nowrap ml-3">
              {% assign startDate = entry.startDate | split: '-' | slice: 0, 2 | join: '.' %}
              {% if entry.endDate %}
                {% assign endDate = entry.endDate | split: '-' | slice: 0, 2 | join: '.' %}
              {% else %}
                {% assign endDate = 'Present' %}
              {% endif %}
              {{ startDate }} - {{ endDate }}
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
  {% endif %}
</div>